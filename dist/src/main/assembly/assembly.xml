<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>flowman-example-${project.version}</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../flows/</directory>
            <outputDirectory>flows</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/flowman-${flowman.version}</directory>
            <outputDirectory/>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>bin/*</exclude>
                <exclude>conf/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/flowman-${flowman.version}</directory>
            <outputDirectory/>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>bin/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/plugins</directory>
            <outputDirectory>plugins</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/flows</directory>
            <outputDirectory>flows</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/conf/</directory>
            <outputDirectory>conf</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>

